<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191F27"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SellingActivity" >

    <ScrollView
        android:id="@+id/selling_page"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sell_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#003D99"
                android:text="@string/hello_world"
                android:textSize="22dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/sell_author"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_title"
                android:layout_marginTop="0dp"
                android:background="#003D99"
                android:paddingTop="10dp"
                android:text="@string/hello_world"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/sell_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_author"
                android:layout_marginTop="40dp"
                android:text="Do you want to sell it " />

            <CheckBox
                android:id="@+id/sell_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/sell_author"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/rent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_text"
                android:layout_marginTop="20dp"
                android:text="Do you want ot rent  it" />

            <CheckBox
                android:id="@+id/rent_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/sell_text" />

            <EditText
                android:id="@+id/isbn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rent_text"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rent_text"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/isbn"
                android:paddingTop="15dp"
                android:text="ISBN"
                android:textColor="#ED1A39"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/sell_price"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/isbn"
                android:layout_marginTop="40dp"
                android:inputType="number" />

            <TextView
                android:id="@+id/price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isbn"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/sell_price"
                android:padding="5dp"
                android:text="Selling Price"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/rent_price"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_price"
                android:layout_marginTop="40dp"
                android:inputType="number" />

            <TextView
                android:id="@+id/price_tag_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_price"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/sell_price"
                android:padding="5dp"
                android:text="Rent Price"
                android:textSize="16dp" />

            <View
                android:id="@+id/seperator"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@id/rent_price"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seperator"
                android:layout_marginTop="50dp"
                android:text="Your Name" />

            <EditText
                android:id="@+id/name"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/seperator"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/seller_name" />

            <TextView
                android:id="@+id/seller_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seller_name"
                android:layout_marginTop="70dp"
                android:text="Contact Details" />

            <EditText
                android:id="@+id/contact"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/seller_name" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact"
                android:layout_centerHorizontal="true"
                android:text="SUBMIT" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>